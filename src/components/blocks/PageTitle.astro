---
import type { PageData } from '../../constants/pages';
import IconArrowLeft from '../icons/IconArrowLeft.astro';
import LinkButton from '../snippets/LinkButton.astro';

interface Props {
	title: string;
	backTo?: PageData;
}

const { title, backTo } = Astro.props;
---

<div class="page-title">
	<div class="container">
		<div class="page-title__inner">
			<div class="page-title__breadcrumb">
				{
					backTo 
						? <a href={backTo.slug}><IconArrowLeft /> <span>{backTo.title}</span></a>
						: <span>&nbsp;</span>
				}
				<!-- CISSYR -->
				<!-- <ul>
					<li><a style="light" href="#"><IconArrowLeft /> <span>CISSYR</span></a></li> -->
					<!-- <li><a style="light" href="#"><IconArrowLeft /> Servicios</a></li> -->
				<!-- </ul> -->
				
				<!-- <LinkButton style="link" text="Ver galerÃ­a" href="#"><IconArrowLeft /></LinkButton> -->
			</div>
			<h1 class="sc-map-position sc-activable">{ title }</h1>
		</div>
	</div>
</div>

<style>
	.page-title {
		&__inner {
			display: flex;
			flex-direction: column;
			gap: 0.5rem;
		}

		h1 {
			font-size: 2rem;
			font-weight: var(--font-weight-bold);
			padding: 0 0 0.625rem;
			margin: 0;
			position: relative;

			&::after,
			&::before {
				content: "";
				display: block;
				width: 100px;
				height: 6px;
				background-color: var(--page-primary-color);
				position: absolute;
				bottom: -6px;
				left: 0;
				border-bottom-right-radius: 16px;
			}

			&::before {
				width: 100%;
				height: 1px;
				bottom: 0;
			}
			@media screen and (max-width: 575px){
				font-size: 1.75rem;
    			line-height: 1.35;
				padding: 0 0 1rem;
			}
		}

		&__breadcrumb {
			/* ul, li {
				margin: 0;
				padding: 0;
				list-style: none;
			}
			ul {
				display: flex;
			} */
			@media screen and (max-width: 575px){
				margin-bottom: 2rem;
			}

			> a, > span {
				display: flex;
				gap: 0.25rem;
				align-items: center;
				font-size: 1rem;
				font-weight: var(--font-weight-medium);
				text-decoration: none;
				color: inherit;
				padding: 0.25rem 0;
				/* opacity: .5; */
				line-height: 1;
				margin: 0;
				color: var(--page-primary-color);
				/* margin-left: -1.875rem; */

				&:hover {
					opacity: 1;
					span {
						text-decoration: underline;
					}
				}
			}
		}
	}
</style>
