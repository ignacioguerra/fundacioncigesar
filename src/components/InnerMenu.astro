---
import LinkButton from './snippets/LinkButton.astro';
import type { PageData } from "../constants/pages";

interface Props {
	menu:Array<PageData>;
}

const { menu } = Astro.props;

---
<div class="inner-menu">
	<ul>
		{ 
			menu.map((menuItem) => {
				const slug = menuItem.slug || ''
				const buttonStyle = Astro.url.pathname === slug ? 'page-color' : 'light'
				return <li><LinkButton style={buttonStyle} text={menuItem.title} href={slug}></LinkButton></li>
			}) 
		}
	</ul>
</div>	
<style>
	.inner-menu {
		margin: 2rem 0 0;
		ul, li {
			margin: 0;
			padding: 0;
			list-style: none;
		}

		ul {
			display: flex;
			/* justify-content: flex-end; */
			gap: 0.5rem;
		}

		a {
			display: block;
			padding: 0.375rem 1rem;
			text-decoration: none;
			color: inherit;

			border: 1px solid var(--gray-400);
			border-radius: 6px;
		}
	}
</style>
