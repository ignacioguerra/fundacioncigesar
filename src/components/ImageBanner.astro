---
interface Props {
	src: string;
	alt: string;
}

const { src, alt } = Astro.props;
---

<div class="banner" style={`background-image: url(${src});`}>
	<!-- <img src={src} alt={alt}> -->
	<div class="banner__title">
		<div>
			<div class="container">
				<!-- <div class="breadcrumb">
					<ul>
						<li><a href="#">CISSYR</a></li>
					</ul>
				</div> -->
				<h1>CISSYR</h1>
			</div>
		</div>
	</div>
	<div class="banner__frame">
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
			<path class="elementor-shape-fill" opacity="0.33" d="M473,67.3c-203.9,88.3-263.1-34-320.3,0C66,119.1,0,59.7,0,59.7V0h1000v59.7 c0,0-62.1,26.1-94.9,29.3c-32.8,3.3-62.8-12.3-75.8-22.1C806,49.6,745.3,8.7,694.9,4.7S492.4,59,473,67.3z"></path>
			<path class="elementor-shape-fill" opacity="0.66" d="M734,67.3c-45.5,0-77.2-23.2-129.1-39.1c-28.6-8.7-150.3-10.1-254,39.1 s-91.7-34.4-149.2,0C115.7,118.3,0,39.8,0,39.8V0h1000v36.5c0,0-28.2-18.5-92.1-18.5C810.2,18.1,775.7,67.3,734,67.3z"></path>
			<path class="elementor-shape-fill" d="M766.1,28.9c-200-57.5-266,65.5-395.1,19.5C242,1.8,242,5.4,184.8,20.6C128,35.8,132.3,44.9,89.9,52.5C28.6,63.7,0,0,0,0 h1000c0,0-9.9,40.9-83.6,48.1S829.6,47,766.1,28.9z"></path>
		</svg>
	</div>
</div>
<style>
	.banner {
		height: 140px;
		background-color: #AC5BD2;
		position: relative;
		overflow: hidden;

		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		align-items: stretch;

		margin-bottom: 3rem;

		background-position: center;
		background-size: cover;
		background-attachment: fixed;

		&::after,
		&::before {
			content: "";
			display: block;
			position: absolute;
			inset: 0;
			background: linear-gradient(180deg, rgba(0,0,0,.1) 0%, rgba(0,0,0,0) 25%,rgba(0,0,0,.15) 100%);
			z-index: 1;
			opacity: 0.5;
			
		}

		&::before {

			background-color: #AC5BD2;

			
		}

		img {
			position: absolute;
			display: block;
			width: 100%;
			height: 100%;
			object-fit: cover;
			/* opacity: 1; */
			/* filter: grayscale(100%) contrast(100%) brightness(100%) blur(0px); */
			top: 0;
			left: 0;
		}

		&__frame {
			position: relative;
			/* bottom: 0; */
			height: 52px;
			width: 100%;
			z-index: 2;
			
			svg {
				width: calc(197% + 1.3px);
				height: 100%;
				position: absolute;
				left: 50%;
				transform: translateX(-50%) scaleY(-1);
				fill: var(--white);
			}
		}

		&__title {
			position: relative;
			z-index: 2;
			flex: 1;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: stretch;
			/* background: var(--white); */
			margin-top: 1rem;
			
			h1 {
				display: flex;
				font-size: 2.25rem;
				margin: 0;
				color: var(--white);
				text-align: center;
				text-shadow: 1px 4px 12px rgba(0,0,0,.4);
			}
		}
	}
</style>
