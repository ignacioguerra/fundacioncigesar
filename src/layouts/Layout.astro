---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--white: #fff;
		--gray-50: #fafafa;
		--gray-100: #f5f5f5;
		--gray-200: #eee;
		--gray-300: #e0e0e0;
		--gray-400: #bdbdbd;
		--gray-500: #9e9e9e;
		--gray-600: #757575;
		--gray-700: #616161;
		--gray-800: #424242;
		--gray-900: #212121;
		--black: #000;

		--accent-color-1: #8945be;
		--accent-color-2: #accb4f;
		--accent-color-3: #1c95cf;
		--accent-color-4: #facf3e;
		--accent-color: var(--accent-color-1);
		--border-color: var(--gray-200);
		--border-radius: 0;

		--page-primary-color: var(--accent-color-1);
		--page-contrasting-color: var(--white);

		--font-weight-light: 300;
		--font-weight-regular: 400;
		--font-weight-medium: 500;
		--font-weight-bold: 700;
	}
	html {
		font: 400 100%/1.5 'Roboto', system-ui, sans-serif;
		background-color: var(--white);
		background-size: 224px;
		color: var(--gray-900);
	}
	body {
		margin: 0;
	}
	*, *::after, *::before {
		box-sizing: border-box;
	}

	.container,
	.reading-container {
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
		padding-left: 0.75rem;
		padding-right: 0.75rem;
	}

	.reading-container {
		max-width: 800px;
	}
</style>
