<style>
	section {
		padding: 4rem 0;
		background-color: var(--gray-100);

		&.light {
			background-color: var(--white);
			/* padding: 1.5rem 0; */
		}

		&.no-gap {
			padding: 0;
		}

		&.overlap {
			margin-top: -200px;
			padding-top: 200px;
		}
	}

	.main-text {
		margin: 2rem 0;
		column-count: 2;
		gap: 3rem;
	}

	.youtube-video-modal {
		position: fixed;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		z-index: 50;
		background-color: rgba(0,0,0,.8);
		/* backdrop-filter: blur(6px); */
		display: flex;
		justify-content: center;
		align-items: center;
		padding-top: var(--header-height);

		/* border-top: 80px solid var(--gray-900); */
		/* border-bottom: 80px solid var(--gray-900); */

		&__container {
			flex: 1; 
			max-width: 1200px;
			/* max-height: 90vh; */
			box-shadow: 0 8px 16px rgba(0,0,0,.65);
			overflow: hidden;
		}
	}

	.text-with-iamge {
		overflow: hidden;
		img {
			/* position: absolute; */
			z-index: 1;
			/* opacity: 0.25; */
			width: auto;
			display: block;
			margin: 0 auto;
			/* height: calc(100% + 200px); */

			/* --to-y: 20px;
			--from-y: 150px;
			--translate-y: calc(var(--from-y) + var(--sc-position) * (var(--to-y) - var(--from-y))); */

			--sc-map-position-from: 150px;
			--sc-map-position-to: 20px;
			transform: translate3d(0,var(--sc-new-position),0);
		}

		&__text {
			/* position: relative; */
			z-index: 2;
			/* transform: translateX(5rem); */
			/* background: white; */
		}

		&__inner {
			display: flex;
			gap: 80px;

			> div {
				flex: 1;
			}
		}
	}
</style>
